{
  "compileOnSave": true,
  "include": ["src"],
  "compilerOptions": {
    "module": "commonjs",
    "resolveJsonModule": true,
    "noImplicitReturns": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noUnusedLocals": true
  }
}
